<h3 class="mb-4">
  <%= title %>
</h3>
<div class="row">
  <% if (properties.length===0) { %>
    <p>No properties available.</p>
    <% } else { %>
      <% properties.forEach(p=> { %>
        <div class="col-md-4 mb-4">

          <div class="card shadow-sm border-0 position-relative property-card">
            <!-- Badge Overlay -->
            <span class="badge position-absolute top-0 end-0 m-2
    <%= p.listingType && p.listingType.toLowerCase() === 'rent'
          ? 'bg-warning text-dark'
          : 'bg-primary' %>">
              <%= p.listingType ? p.listingType.toUpperCase() : 'SALE' %>
            </span>

            <img src="<%= p.photo %>" class="card-img-top" alt="Property"
              style="height:230px;object-fit:cover;border-radius:8px 8px 0 0;">

            <div class="card-body">
              <h5 class="fw-bold">
                <%= p.title %>
              </h5>
              <p class="mb-1"><i class="bi bi-geo-alt"></i>
                <%= p.location %>
              </p>
              <p class="text-muted mb-2">
                <%= p.type %>
              </p>
              <p class="fw-semibold text-primary mb-2">
                â‚¹<%= p.price.toLocaleString() %>
                  <% if (p.listingType && p.listingType.toLowerCase()==='rent' ) { %>
                    /month
                    <% } %>
              </p>
              <a href="/property/<%= p.id %>" class="btn btn-outline-primary btn-sm">View Details</a>
            </div>
          </div>





        </div>
        <% }) %>
          <% } %>
</div>